{
  "name": "fern",
  "description": "Fern API",
  "repository": "https://github.com/fern-api/fern",
  "author": "Birch Solutions, Inc.",
  "private": true,
  "workspaces": [
    "packages/**",
    "!packages/**/lib",
    "!packages/**/dist",
    "!packages/**/generated",
    "generators/**",
    "!generators/**/lib",
    "!generators/**/dist"
  ],
  "scripts": {
    "clean": "pnpm -r --verbose --parallel run clean",
    "compile": "pnpm -r --verbose --parallel run compile",
    "test": "pnpm compile && jest --passWithNoTests",
    "test:ete": "pnpm --filter=@fern-api/cli dist:cli:dev && pnpm --filter=@fern-api/seed-cli dist:cli && pnpm --filter=@fern-api/ete-tests test",
    "lint:eslint": "eslint --max-warnings 0 . --ignore-path .eslintignore",
    "lint:eslint:fix": "pnpm lint:eslint -- --fix",
    "lint:monorepo": "mrlint lint",
    "lint:monorepo:fix": "pnpm lint:monorepo --fix",
    "lint:style": "stylelint 'packages/**/src/**/*.scss' --allow-empty-input --max-warnings 0",
    "lint:style:fix": "pnpm lint:style --fix",
    "format": "prettier --write --ignore-unknown --ignore-path ./shared/.prettierignore",
    "format:fix": "pnpm format --ignore-path ./shared/.prettierignore \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path ./shared/.prettierignore \"**\"",
    "depcheck": "pnpm -r --verbose --parallel run depcheck",
    "codegen:local": "pnpm fern:local generate",
    "fern:local": "pnpm --filter=@fern-api/cli dist:cli:prod && FERN_NO_VERSION_REDIRECTION=true node $(pnpm --filter=@fern-api/cli bin fern:prod)",
    "fern-dev:local": "pnpm --filter=@fern-api/cli dist:cli:dev && FERN_NO_VERSION_REDIRECTION=true node $(pnpm --filter=@fern-api/cli bin fern:dev)",
    "fern:build": "POSTHOG_API_KEY=\"\" pnpm --filter=@fern-api/cli dist:cli:prod && echo $(pnpm --filter=@fern-api/cli bin fern:prod)",
    "fern-dev:build": "pnpm --filter=@fern-api/cli dist:cli:dev && echo $(pnpm --filter=@fern-api/cli bin fern:dev)",
    "fern-local:build": "pnpm --filter=@fern-api/cli dist:cli:local && echo $(pnpm --filter=@fern-api/cli bin fern:local)",
    "seed:build": "pnpm --filter=@fern-api/seed-cli dist:cli && echo $(pnpm --filter=@fern-api/seed-cli bin seed)",
    "publish": "pnpm -r --no-private --parallel --verbose npm publish --access public",
    "add-workspace": "pnpm mrlint add-workspace",
    "fern-script": "pnpm --filter=@fern-api/scripts dist:cli && node $(pnpm --filter=@fern-api/scripts bin fern-scripts)",
    "generate-json-schema": "pnpm fern-script write-json-schema fern.schema.json",
    "generate-json-schema:dev": "pnpm fern-script write-json-schema fern.schema.dev.json",
    "check-cli-release-blockers": "pnpm fern-script check-cli-release-blockers",
    "check-docs-release-blockers": "pnpm fern-script check-docs-release-blockers",
    "root-package:check": "pnpm fern-script check-root-package",
    "root-package:fix": "pnpm root-package:check --fix",
    "demo-setup": "pnpm --filter=@fern-api/demo-setup dist:cli && node $(pnpm --filter=@fern-api/demo-setup bin demo-setup)",
    "seed": "node $(pnpm --filter=@fern-api/seed-cli bin seed)",
    "seed:local": "pnpm --filter=@fern-api/seed-cli dist:cli && node $(pnpm --filter=@fern-api/seed-cli bin seed)",
    "ir:generate": "pnpm --filter=@fern-api/ir-sdk generate",
    "openapi-ir:generate": "pnpm --filter=@fern-api/openapi-ir-sdk generate",
    "seed-config:generate": "pnpm --filter=@fern-api/seed-cli generate",
    "docs-config:generate": "pnpm --filter=@fern-api/configuration generate"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.0",
    "@blueprintjs/eslint-plugin": "^2.1.2",
    "@blueprintjs/stylelint-plugin": "^4.1.3",
    "@types/is-ci": "^3.0.2",
    "@types/jest": "^29.0.3",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^6.21.0",
    "chalk": "^5.0.1",
    "depcheck": "^1.4.6",
    "eslint": "^8.56.0",
    "@eslint/eslintrc": "^2.1.4",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.15.1",
    "execa": "^5.1.1",
    "husky": "^8.0.1",
    "immer": "^9.0.15",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "jsonc-parser": "~2.2.1",
    "lint-staged": "^13.0.3",
    "lodash-es": "^4.17.21",
    "mrlint": "0.1.0",
    "organize-imports-cli": "^0.10.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^5.0.0",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "4.6.4"
  },
  "resolutions": {
    "@babel/traverse": "7.23.2",
    "json5": "2.2.2",
    "yaml": "2.3.3"
  },
  "packageManager": "pnpm@3.6.1",
  "dependenciesMeta": {
    "jsonc-parser@2.2.1": {
      "unplugged": true
    }
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@fern-api/logging-execa": "workspace:^",
    "@fern-fern/generator-exec-sdk": "^0.0.730",
    "terminal-link": "^3.0.0",
    "workspace": "^0.0.1-preview.1"
  }
}